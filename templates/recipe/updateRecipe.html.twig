{% extends 'baseAdmin.html.twig' %}

{% block title %}Hello RecipeController!{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="my-5">Modifier votre recette</h2>
        {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.description) }}
        {{ form_row(form.imageFile) }}
        {{ form_row(form.category) }}
        <button type="submit" class="btn btn-success mt-3">Modifier la recette</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
