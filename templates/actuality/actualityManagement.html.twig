{% extends 'baseAdmin.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center my-5">Gestion des actualités</h2>
        <div class="row col-md-12 col-md-offset-2 custyle">
            <table class="table table-striped custab">
                <thead>
                <a class="btn btn-primary btn-xs pull-right" href="{{ path('nouvelle_actualite') }}">Ajouter une actualité</a>
                <tr>
                    <th>ID</th>
                    <th>Titre</th>
                    <th class="text-center">Action</th>
                </tr>
                </thead>
                {% for actuality in actualities %}
                    <tr>
                        <td>{{ actuality.id}}</td>
                        <td>{{ actuality.title}}</td>
                        <td class="text-center">
                            <a class='btn btn-info btn-xs' href="{{ path('modifier_actualite', {'slug': actuality.slug}) }}">Modifier</a>
                            <a class="btn btn-danger btn-xs" href="{{ path('supprimer_actualite', {'slug': actuality.slug}) }}">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}
