{% extends 'base.html.twig' %}
{% block title %}{% endblock %}

{% block body %}
    <h1 class="text-center">Bienvenue dans votre espace {{ userName }}</h1>
    <div class="container">
        <h2>Vos recettes</h2>
        <div class="row">
            {% for recipe in recipes %}
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card mb-5 shadow-sm">
                        <img src="http://via.placeholder.com/640x360" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">{{ recipe.title }}</h5>
                            <a href="{{ path('recette', {'slug': recipe.slug}) }}" class="btn btn-primary">Voir la recette</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    {{ dump(recipes) }}
{% endblock %}